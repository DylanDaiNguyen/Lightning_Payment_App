<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Lightning Bitcoin Transfer</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
        <meta name="msapplication-tap-highlight" content="no">
		<link href="/css/dashboard/main.css" rel="stylesheet">
        <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
    </head>
    <body>
        <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
            <div class="app-header header-shadow bg-info header-text-dark">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>    
                <div class="app-header__content">
                    <div class="app-header-left">
                        <div class="search-wrapper">
                            <div class="input-holder">
                                <input type="text" class="search-input" placeholder="Type to search">
                                <button class="search-icon"><span></span></button>
                            </div>
                            <button class="close"></button>
                        </div>
                        <ul class="header-menu nav">
                            <li class="nav-item">
                                <a href="javascript:void(0);" class="nav-link">
                                    <i class="nav-link-icon fa fa-database"> </i>
                                    Statistics
                                </a>
                            </li>
                            <li class="btn-group nav-item">
                                <a href="javascript:void(0);" class="nav-link">
                                    <i class="nav-link-icon fa fa-edit"></i>
                                    Projects
                                </a>
                            </li>
                            <li class="dropdown nav-item">
                                <a href="javascript:void(0);" class="nav-link">
                                    <i class="nav-link-icon fa fa-cog"></i>
                                    Settings
                                </a>
                            </li>
                        </ul>        
                    </div>
                    <div class="app-header-right">
                        <div class="header-btn-lg pr-0">
                            <div class="widget-content p-0">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-left">
                                        <div class="btn-group">
                                            <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                                <img width="42" class="rounded-circle" src="/css/dashboard/assets/images/avatars/<%= data.ID %>.jpg" alt="/css/dashboard/assets/images/avatars/unknown_user.jpg">
                                                <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                            </a>
                                            <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                                <button type="button" tabindex="0" class="dropdown-item">User Account</button>
                                                <button type="button" tabindex="0" class="dropdown-item">Settings</button>
                                                <h6 tabindex="-1" class="dropdown-header">Header</h6>
                                                <button type="button" tabindex="0" class="dropdown-item">Actions</button>
                                                <div tabindex="-1" class="dropdown-divider"></div>
                                                <a href="/logout" class="dropdown-item">Logout</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="widget-content-left  ml-3 header-user-info">
                                        <div class="widget-heading">
                                            <%= data.ID %>			
                                        </div>
                                        <div class="widget-subheading">
                                            Membership
                                        </div>
                                    </div>
                                    <div class="widget-content-right header-user-info ml-3">
                                        <button type="button" class="btn-shadow p-1 btn btn-primary btn-sm show-toastr-example">
                                            <a href="/logout" class="mm-active">
                                                <i class="fa text-white fa-power-off pr-1 pl-1"></i>
                                            </a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>        
                    </div>
                </div>
            </div>
            <div class="app-main">
                <div class="app-sidebar sidebar-shadow bg-vicious-stance sidebar-text-light">
                    <div class="app-header__logo">
                        <div class="logo-src"></div>
                        <div class="header__pane ml-auto">
                            <div>
                                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                    <span class="hamburger-box">
                                        <span class="hamburger-inner"></span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="app-header__mobile-menu">
                        <div>
                            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                    <div class="app-header__menu">
                        <span>
                            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                                <span class="btn-icon-wrapper">
                                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                                </span>
                            </button>
                        </span>
                    </div>    
                    <div class="scrollbar-sidebar">
                        <div class="app-sidebar__inner">
                            <ul class="vertical-nav-menu">
                                <li class="app-sidebar__heading">Dashboards</li>
                                <li>
                                    <a href="../index" class="mm-active">
                                        <i class="fa metismenu-icon fa-flag"></i>
                                        Index Page
                                    </a>
                                </li>
                                <li class="app-sidebar__heading">Account Info</li>
                                <li>
									<a href="../home" class="mm-active">
										<i class="metismenu-icon pe-7s-wallet"></i>
										Balance
									</a>
								</li>
                                <li>
                                    <a href="../sent" class="mm-active">
                                        <i class="fa metismenu-icon fa-arrow-up"></i>
                                        Sent Invoices
                                    </a>
                                </li>
                                <li>
                                    <a href="../received" class="mm-active">
                                        <i class="fa metismenu-icon fa-arrow-down"></i>
                                        Received Invoices
                                    </a>
                                </li>
                                <li class="app-sidebar__heading">Make Transaction</li>
                                <li>
                                    <a href="lnintransfer" class="mm-active">
                                        <i class="fa metismenu-icon fa-upload"></i>
                                        Internal Transfer
                                    </a>
                                </li>
                                <li>
                                    <a href="lnreceive" class="mm-active">
                                        <i class="fa metismenu-icon fa-download"></i>
                                        Create Request
                                    </a>
                                </li>
                                <li>
                                    <a href="lntransfer" class="mm-active">
                                        <i class="metismenu-icon pe-7s-cloud-upload"></i>
                                        External Transfer
                                    </a>
                                </li>
                                <li>
                                    <a href="lnwithdraw" class="mm-active">
                                        <i class="metismenu-icon pe-7s-cash"></i>
                                        Withdraw
                                    </a>
                                </li>
                                <li class="app-sidebar__heading">Tools</li>
                                <li>
                                    <a href="lndecode" class="mm-active">
                                        <i class="fa metismenu-icon fa-unlock"></i>
                                        Request Decoder
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="app-main__outer">
                    <div class="app-main__inner">
                        <div class="app-page-title">
                            <div class="page-title-wrapper">
                                <div class="page-title-heading">
                                    <div class="page-title-icon">
                                        <i class="pe-7s-cloud-upload icon-gradient bg-mean-fruit"></i>
                                    </div>
                                    <div>Transfer To External User</div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                                <div class="main-card mb-3 card">
                                    <div class="card-body">
                                        <h5 class="card-title">External Transfer</h5>
                                        <form method="post" action="/btc/lntransfer" name="myform" onsubmit="return validate()">
                                            <input type="hidden" name="_csrf" value="<%= data.csrfToken %>">
                                            <div class="form-group">
                                                <input type="text" name="ln_req" class="form-control" placeholder= "Lightning Request *" required />
                                            </div>
                                            <div class="form-group">
                                                <input type="password" name="pass" class="form-control" placeholder="Password *" required autocomplete="off" />  
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-primary">Transfer</button>
                                            </div>
                                            <div align="center">
                                                <% if(data.hasOwnProperty('result')){ %>
                                                    <% if(data.result){ %>
                                                        <h4>Transfer result: Success.</h4>
                                                    <% } else{ %>
                                                        <h4>Transfer result: Fail.</h4>
                                                        <br><h5>Reason: <%= data.error %></h5>
                                                    <% } %>
                                                <% } %>   
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>       
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="/css/dashboard/assets/scripts/main.js"></script>
        <script>
            function validate(){
                const a = document.forms["myform"]["pass"].value;
                const passregex = /^(?=.*[A-Z])(?=.*\d)(?=.*[@$!*?&])[A-Za-z\d@$!*?&]{8,}$/;
                if(!passregex.test(a)){
                    alert("Invalid password, please try again!");
                    return false;
                }
            } 
        </script>
    </body>
</html>